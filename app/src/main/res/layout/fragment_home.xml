<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.HomeFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/cl_header"
            android:layout_width="match_parent"
            android:layout_height="212dp"
            android:background="@color/magentaColor">

            <TextView
                android:id="@+id/textView"
                android:layout_alignParentStart="true"
                style="@style/whiteTextBody"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:text="Rencanain healing sambil rebahan, kita yang atur..." />

            <ImageButton
                android:id="@+id/btn_profile"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginHorizontal="@dimen/margin"
                android:layout_marginTop="16dp"
                android:src="@color/black"
                android:background="@color/magentaColor"
                android:layout_alignParentEnd="true"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/tv_budget_kamu"
                style="@style/whiteTextBody"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/btn_profile"
                android:layout_marginHorizontal="@dimen/margin"
                android:text="Budget Kamu" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_budget_kamu"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_my_budget"
                    style="@style/whiteTextHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:text="IDR 1.450.000" />

                <!--                <ImageButton-->
                <!--                    android:id="@+id/btn_budget"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:backgroundTint="@color/magentaColor"-->
                <!--                    android:src="@color/black"-->
                <!--                    android:tint="@color/white"-->
                <!--                    android:contentDescription="TODO" />-->

            </LinearLayout>

        </RelativeLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gak Pakai Ribet"
                />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_maps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lebih Explore"
                />

        </com.google.android.material.tabs.TabLayout>

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="EasyFragment"
            android:id="@+id/fragment"
            tools:layout="@layout/fragment_easy"
            android:layout_marginTop="66dp"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>